%ul.breadcrumb
  %li
    %a{:href => "#{root_path}"} Home
    %span.divider /
  %li.active #{@album.name}

%h2= @album.name

%ul.thumbs.album
  - @photos.each do |photo|
    %li
      = link_to (image_tag photo_path(photo, 'thumb'), :alt => photo.name, :class => 'thumbnail'), album_photo_path(@album.slug, photo.id)
